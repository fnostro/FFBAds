{
	"manifest_version": 2,

	"name": "FaceBlock",
	"description": "Blocks ads inserted into the facebook newsfeed",
	"version": "1.0",
	"minimum_chrome_version": "27",
	"browser_action": 
		{
			"default_icon": "FaceBlock.png"
		},
	"permissions": [ "tabs" ],
	"content_scripts": [
		{
			"all_frames": false,
			"matches": [ "https://www.facebook.com/*" ],
			"js": [ "FFBAds.js" ],
			"run_at": "document_end"
		}
	]
}